<Window x:Class="Tema3_Mosaico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_Mosaico"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Background="Purple" Height="100"></TextBlock>
        <TextBlock DockPanel.Dock="Left" Background="Purple" Width="100"></TextBlock>
        <TextBlock DockPanel.Dock="Bottom" Background="Green" Height="100"></TextBlock>
        <TextBlock DockPanel.Dock="Right" Background="Green" Width="100"></TextBlock>
        <TextBlock DockPanel.Dock="Left" Background="Orange" Width="100"></TextBlock>
        <TextBlock DockPanel.Dock="Bottom" Background="Orange" Height="100"></TextBlock>
        <TextBlock DockPanel.Dock="Right" Background="Pink" Width="100"></TextBlock>
        <TextBlock DockPanel.Dock="Top" Background="Pink" Height="100"></TextBlock>
        <TextBlock DockPanel.Dock="Left" Background="Black" ></TextBlock>


    </DockPanel>
</Window>
